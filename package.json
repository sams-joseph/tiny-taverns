{
  "name": "tiny-taverns",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:migrate": "pnpm --filter=@repo/adapter-postgres run migrate",
    "db:reset": "pnpm --filter=@repo/adapter-postgres run reset"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.8.3",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@10.29.3",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@effect/vitest": "catalog:",
    "@types/node": "catalog:",
    "dotenv-cli": "catalog:",
    "tsx": "catalog:",
    "vite-tsconfig-paths": "^6.1.1",
    "vitest": "catalog:"
  }
}
