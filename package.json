{
  "name": "tiny-taverns",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:migrate": "pnpm --filter=@repo/adapter-postgres run migrate",
    "db:reset": "pnpm --filter=@repo/adapter-postgres run reset"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.8.3",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@types/node": "^25.2.1",
    "dotenv-cli": "^11.0.0",
    "tsx": "^4.21.0"
  }
}
